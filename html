  <script>
    // Example static data, replace this with fetch('/api/interviews') from backend
    const interviews = [
      {
        candidate_id: 101,
        job_id: 2001,
        recruiter_id: 11,
        scheduled_time: "2025-08-06 10:00 AM",
        interview_link: "https://meet.google.com/abc-defg-hij",
        status: "Pending"
      },
      {
        candidate_id: 102,
        job_id: 2002,
        recruiter_id: 12,
        scheduled_time: "2025-08-07 02:00 PM",
        interview_link: "https://zoom.us/j/123456789",
        status: "Completed"
      }
    ];

    const tbody = document.getElementById("interviewTable");

    interviews.forEach(interview => {
      const row = document.createElement("tr");
      row.innerHTML = `
        <td>${interview.candidate_id}</td>
        <td>${interview.job_id}</td>
        <td>${interview.recruiter_id}</td>
        <td>${interview.scheduled_time}</td>
        <td><a href="${interview.interview_link}" target="_blank">Join</a></td>
        <td>${interview.status}</td>
      `;
      tbody.appendChild(row);
    });
  </script>
